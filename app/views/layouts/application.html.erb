<!DOCTYPE html>
<html lang="fr" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Projet Kazimirski</title>

    <%= stylesheet_link_tag 'application', media: 'all' %>

    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar navbar-default <%= yield :css_class_navbar %>">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Projet Kazimirski</a>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menuNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse" id="menuNavbar">
          <ul class="nav navbar-right navbar-nav">
            <% if current_user.present? %>
                <%= yield :contextual_menu_items %>
                <li><%= mail_to "contact@kazimirski.fr", "Contact" %></li>
                <li><%= link_to 'DÃ©connexion', destroy_user_session_path, method: :delete %></li>
            <% else %>
                <li><%= link_to 'Connexion', new_user_session_path %></li>
            <% end %>
          </ul>
        </div>

      </div>
    </nav>

    <% if notice.present? || alert.present? %>
      <div class="container">
          <div class="row">
            <div class="col-md-4 col-md-offset-4">

            <% if notice.present? %>
              <div class="alert alert-info" role="alert"><%= notice %></div>
            <% end %>

            <% if alert.present? %>
              <div class="alert alert-danger" role="alert"><%= alert %></div>
            <% end %>

            </div>
          </div>
      </div>
    <% end %>

  <%= yield %>

    <%= javascript_include_tag 'application' %>

    <%= yield :custom_js %>

    <% if Rails.env.production? %>
      <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-53233157-5', 'auto');
          ga('send', 'pageview');

      </script>
    <% end %>

  </body>
</html>
