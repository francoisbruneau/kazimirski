<div class="row">
  <div class="col-md-4 col-md-offset-4">

  <h2>Inscription</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <% if @captcha.present? %>
     <%= hidden_field_tag 'captcha_uuid', @captcha[:uuid] %>
    <% end %>

    <div class="form-inputs">

      <% if @captcha.present? %>
        <%= f.input :captcha, required: true do %>
          <p>Veuillez recopier l'extrait ci-dessous :</p>
          <%= image_tag("/captcha/#{@captcha[:uuid]}.png")%>
          <%=  text_field_tag(:user_captcha, nil, class: 'form-control', autofocus: true) %>
        <% end %>
      <% end %>

      <%= f.input :email, required: true, autofocus: false %>
      <%= f.input :password, required: true, label: 'Mot de passe', hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @validatable) %>
      <%= f.input :password_confirmation, label: 'Confirmation du mot de passe', required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "S'inscrire" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>

</div>